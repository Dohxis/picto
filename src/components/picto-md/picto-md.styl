:host
  component()
  lh 1
  font-family var(--picto-font-family)
  color var(--picto-text-color)

pre code
  font normal 10pt Consolas, Monaco, monospace

a
  color inherit
  text-decoration none
  &:hover
    color var(--picto-accent-color)
    text-decoration underline

table
  border-collapse collapse
  border-spacing 0

td, th
  lh 3
  ph 1
  text-align left
  border-bottom 1px solid var(--picto-pane-border)

th
  border-bottom-width 3px
hr
  mt -2px
  mb 2

h1
  @extend $h1

h2
  @extend $h2

h3
  @extend $h3

h4
  @extend $h4

h5
  @extend $h5

p
  @extend $p
